{
  "name": "slowverb",
  "version": "1.0.0",
  "description": "Slowed & Reverb audio effects extension for Chrome and Firefox",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "node scripts/build.js all",
    "build:chrome": "node scripts/build.js chrome",
    "build:firefox": "node scripts/build.js firefox",
    "pack": "node scripts/build.js pack all",
    "pack:chrome": "node scripts/build.js pack chrome",
    "pack:firefox": "node scripts/build.js pack firefox",
    "dev:chrome": "copy manifest.chrome.json manifest.json",
    "dev:firefox": "web-ext run --source-dir dist/firefox --firefox-profile dev-profile --keep-profile-changes"
  },
  "devDependencies": {
    "fast-check": "^3.22.0",
    "sharp": "^0.34.5",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "chrome-extension",
    "audio",
    "reverb",
    "slowed",
    "web-audio-api"
  ],
  "license": "MIT",
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}
